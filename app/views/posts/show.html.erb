<!-- start: Page Title -->
<div id="page-title" class="article single">

  <h2><%= @post.title %></h2>

</div>
<!-- end: Page Title -->
    
<!--start: Wrapper-->
<div id="wrapper">
      
  <!--start: Row -->
  <div class="row-fluid">
  
    <div class="posts span8">

      <!-- start: Post -->
      <div class="post first last">
      
        <% if @post.show_photo_as_header and @post.photo and !@post.photo.file.url.blank? %>
        <div class="post-img picture">
          <%= image_tag(@post.photo.file.url(:full), class: 'image') %>
        </div>
        <%= render 'shared/photo_footer', photo: @post.photo %>
        <% end %>
        <div class="info">
          <span class="post-date">
            <span class="day"><%= @post.published_at.day %></span>
            <span class="month"><%= I18n.localize(@post.published_at, :format => "%B")[0,3] %></span>
            <span class="year"><%= @post.published_at.year %></span>
          </span>
        </div>
        <div class="post-title clearfix">
          <h2><%= @post.lead %></h2>
        </div>
        <div class="post-content">
          <div class="post-meta">
            <p>Por <a href="<%= @post.author.url %>" target="_blank"><%= @post.author.name %></a></p> 
            <% unless @post.tag_list.blank? %>
              <p>Tags: <%= @post.tag_list %></p>
            <% end %>
          </div>
          <%= render 'shared/show_admin_links', item: @post %>
          <div class="post-description">
            <%= raw(@content) %>
          </div>
        </div>

        <%= render 'shared/social_buttons' %>

        <%= render '/shared/ad_banner' %>

        

      </div>
      <div class="post first last related-posts">
        
        <%= render 'shared/related_posts', related_posts: @related_posts, width: 'span6' %>
        
      </div>
      <div class="post first last comments">

        <%= render 'shared/comments' %>
      
      </div>
      <!-- end: Post -->

    </div>  

    <%= render 'shared/show_related_entities', entities: @related_entities %>

    <!-- Donate banner -->
    <div class="span4">
      <a href="http://www.civio.es/dona/" target="_blank">
        <%= image_tag("/images/banner_vertical.jpg") %>
      </a>
    </div>

  </div>
  <!--end: Row -->

</div>
<!-- end: Wrapper  -->

