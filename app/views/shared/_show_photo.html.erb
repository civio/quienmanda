<% if item.published or (can? :manage, item) %>
<div class="item-cont <%= (defined? span) ? span : item.extra_wide? ? 'col-sm-12 col-md-6' : 'col-sm-12 col-md-3' %>"> 
  <div class="item photo">
    <div class="picture span">

      <% if defined? mixed and mixed %>
      <div class="description-top">
        <% unless item.footer.blank? %>
        <p><%= link_to raw(item.footer), item %></p>
        <% end %>
      </div>
      <% end %>

      <%= link_to image_tag(item.file.url(item.extra_wide ? :full : :small)), item, class: 'image' %>
     
      <div class="description">
        <% unless defined? mixed and mixed %>
          <% unless item.footer.blank? %>
          <p><%= link_to raw(item.footer), item %></p>
          <% end %>
        <% end %>
        <div class="picture-meta">
          <%= render 'shared/show_photo_credit', photo: item %>
          <%= render 'shared/show_tags', item: item %>
        </div>
        <%= render 'shared/show_admin_links', :item => item %>
      </div>
    </div>  
  </div>
</div>
<% end %>