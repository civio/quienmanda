<% if item.published or (can? :manage, item) %>
<div class="item-cont <%= (defined? span) ? span : 'col-sm-12 col-md-4' %>"> 
  <div class="item post">
  
    <% if defined?(frontpage) %>
    <h2>
      <a href="<%= post_path(item) %>">
        <span><%= item.title %></span>
      </a>
    </h2>
    <% else %>
    <h3>
      <a href="<%= post_path(item) %>">
        <span><%= item.title %></span>
      </a>
    </h3>
    <% end %>

    <div class="picture">
      <%= link_to image_tag(item.photo && item.photo.file.url(defined?(frontpage) ? :full : :small)), item, class: 'image' %>
      <div class="description">
        <p>
          <%= link_to item.lead, post_path(item) unless item.lead.blank? %>
        </p>
        <div class="picture-meta">
          <%= render 'shared/show_tags', item: item %>
        </div>
        <%= render 'shared/show_admin_links', :item => item %>
      </div>
    </div>  
  </div>
</div>
<% end %>