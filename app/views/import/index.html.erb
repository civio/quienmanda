<div id="page-title" class="centered">
  <h2>Import</h2>
</div>

<!--start: Wrapper-->
<div id="wrapper" class="full">
  <div class="row">
    <div class="col-sm-12">
          
      <h2>Upload new file</h2>  
      <p>
        <%= form_tag({ action: :upload }, multipart: true) do %>
          <%= file_field_tag 'file' %>
          <%= submit_tag "Upload", class: 'btn btn-primary' %>
        <% end %>
      </p>
    </div>
  </div>
</div>
<!-- end: Wrapper  -->

<!--start: Wrapper-->
<div id="wrapper" class="full">
  <div class="row">
    <div class="col-sm-12">
            
      <h2>Process database facts</h2>
      <p>
        <%= form_tag({ action: :process_facts }, method: :get, class: 'form-inline') do %>
          <%= select_tag(:importer, options_for_select([ 'CNMV', 'CSV' ])) %>
          <%= submit_tag "Process", class: 'btn btn-primary' %>
        <% end %>
      </p>
    </div>
  </div>
</div>
<!-- end: Wrapper  -->