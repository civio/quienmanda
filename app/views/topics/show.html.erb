<!-- start: Page Title -->
<div id="page-title" class="topic centered">
  <div class="quien-manda-en">Quién Manda <span>en</span></div>
  <h2><%= @title %></h2>
</div>
<!-- end: Page Title -->

<% if @description %>
<div class="row topic-description">
  <p class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3"><%= @description %></p>
</div>
<% end %>

<% if @entity %>
<div id="wrapper" class="topic-viz">
  <div id="wrapper" class="full">
    <%= render 'shared/show_entity_viz', path: entity_path(@entity), slug: @entity.slug %>
  </div>
</div>
<% end %>

<!-- start: Related Entities -->
<% if !@related_entities.empty? %>
<div id="wrapper">
  <div class="title people"><p>Protagonistas</p></div>
  <div id="wall" class="row post topic"> 
    <% @related_entities.each do |entity| %>
      <% if entity.person? %>
      <%= render '/shared/show_person', item: entity, show_square_picture: true %>
      <% else %>
      <%= render '/shared/show_organization', item: entity, show_square_picture: true %>
      <% end %>
    <% end %>
  </div>
</div>
<% end %>
<!-- end: Articles -->

<!-- start: Articles -->
<% if !@posts.empty? %>
<div id="wrapper">
  <div class="title article"><p>Artículos</p></div>
  <div id="wall" class="row post topic"> 
    <% @posts.each do |post| %>
      <%= render '/shared/show_post', :item => post %>
    <% end %>
  </div>
</div>
<% end %>
<!-- end: Articles -->

<!-- start: Fotomandón -->
<% if !@photos.empty? %>
<div id="wrapper">
  <div class="title photo"><p>Fotomandón</p></div>
  <div id="wall" class="row extra-wall photo topic">
    <% @photos.each do |photo| %>
      <%= render partial_name(photo), :item => photo %>
    <% end %>
  </div>
</div>
<% end %>
<!-- end: Fotomandón -->